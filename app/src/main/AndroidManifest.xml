<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.smartoffice">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- added row-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- added row-->

    <!-- added row "android:usesCleartextTraffic="true" -->
    <!-- added row "android:name=".SOApplication" -->
    <!-- added Menu/Project structure "Java 1.8 compat" -->

    <application
            android:name=".SOApplication"
            android:usesCleartextTraffic="true"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>